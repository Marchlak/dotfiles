exec --no-startup-id dunst
###variables
set $mod Mod4

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"


exec_always --no-startup-id ~/.config/i3/config.d/scripts/monitors.sh

set $disp1 eDP-1-2
set $disp2 HDMI-0

exec_always --no-startup-id xrandr --output $disp1 --primary --auto --output $disp2 --auto --right-of $disp1

exec --no-startup-id /usr/lib/gnome-settings-daemon/gsd-xsettings
exec --no-startup-id xsettingsd

include ~/.config/i3/config.d/*.conf

mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+Shift+x exec --no-startup-id bash ~/.config/i3/config.d/scripts/lock.sh
exec --no-startup-id xautolock -time 10 -locker "~/.config/i3/config.d/scripts/lock.sh"

exec_always --no-startup-id bash -lc 'sleep 1; ~/.config/i3/config.d/scripts/wallpaper.sh'

default_border pixel 2
default_floating_border pixel 2
hide_edge_borders smart
for_window [window_role="pop-up"] floating enable
for_window [window_type="dialog"] floating enable
